<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adeel.moviedb">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.views.activities.SettingsActivity"></activity>
        <activity android:name=".ui.main.views.activities.DetailActivity" />
        <activity android:name=".ui.main.views.activities.SearchActivity" />
        <activity android:name=".ui.main.views.activities.MoviesActivity" />
        <activity android:name=".ui.main.views.activities.CoroutinesSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>